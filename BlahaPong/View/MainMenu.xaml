<Window x:Class="BlahaPong.View.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BlahaPong.View"
        mc:Ignorable="d"
        Title="VanEgyCigid?" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center">Choose a Mode (Difficulty can be chosen later)!</TextBlock>
        <Button Width="200" Height="40" Margin="10" Click="OnePlayer">1 Player</Button>
        <Button Width="200" Height="40" Margin="10" Click="TwoPlayer">2 Player</Button>
        <Button Width="200" Height="40" Margin="10" Click="Credits">Credits</Button>
        <Button Width="200" Height="40" Margin="10" Click="Exit">Exit</Button>
    </StackPanel>
</Window>
